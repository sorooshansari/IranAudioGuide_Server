                                        <blockquote>
                                            <span class="title">{{city.CityName}}</span>
                                            <p>
                                                {{city.CityDesc}}<br>
                                                <span class="badge"><span class="fa fa-map-marker"></span> {{city.TotalStoriesCount.length}}</span>
                                                <span class="badge"><span class="fa fa-microphone"></span> {{city.TotalAudiosCount.length}}</span>
                                            </p>
                                        </blockquote>
                                        <a href="#!" class="secondary-content hide-on-small-and-down"><i class="fa fa-ellipsis-v"></i></a>
                                    </li>
                                </ul>
                            </div>
