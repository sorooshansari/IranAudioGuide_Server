                <tr id="PkgNameRow">
                    <td id="PkgName" class="_2ndtd"><i class="icon fa fa-briefcase"></i>&nbsp;@Model.PackageName</td>
                </tr>

            </table>
            <table id="PkgDetailsTbl" class="table-mybordered tbldotted table-condensed">
                <tr>
                    <td class="_1sttd PkgDetTD"><i class="icon fa fa-map-signs"></i>&nbsp;@Global.PaymentPage2</td>
                    <td class="_2ndtd PkgDetTD"><i class="icon fa fa-clipboard"></i>&nbsp;@Global.PaymentPage21</td>
                </tr>




                @foreach (var item in Model.PackageCities)
                {

                    <tr style="background-color: #19304c !important;">
                        <td class="_1sttd" style="background-color:transparent;"><div class="col-xs-12" style="color:white; font-size:small; font-weight:300;">@item.CityName</div></td>
                        <td class="_2ndtd desc" style="background-color:transparent; color:white; padding-top: 10px !important; font-weight:300;">@item.CityDesc</td>
                    </tr>
                }


                <tr style="background-color: #19304c !important;">
                    <td class="_1sttd" colspan="2" style="background-color:#001644 !important;">
                        <div class="col-xs-12" style="color:white; font-size:small; font-weight:600; font-style:italic; padding:5px;">
                            <i class="icon fa fa-credit-card-alt"></i>
                            &nbsp;@Global.PaymentPage22
                        </div>
                    </td>

                </tr>
                <tr>
                    @if (ViewBag.IsChooesZarinpal)
                    {
                        <td class="_2ndtd" style="color:white; font-size:small; background-color:#fdcf41; font-weight:300; vertical-align:middle;">
                            <img style="width:35%;" src="~/images/icon-128x128.png" />
                        </td>
                    }
                    else
                    {
                        <td class="_2ndtd" style="color:white; font-size:small;  background-color:#006dae; font-weight:300; vertical-align:middle;">
                            <img style="width:90%;" src="~/images/WebMoney-logo-white_8.png" />
                        </td>
                    }

                    <td class="_2ndtd" style="background-color:#19304c; color:white; font-size:small; font-weight:300; vertical-align:middle;">
                        <div class="col-xs-12" style="text-align:center; padding:0;">
