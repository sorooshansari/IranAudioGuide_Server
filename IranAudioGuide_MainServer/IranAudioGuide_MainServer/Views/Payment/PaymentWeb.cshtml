                    {
                        <a class="btn btn-default purchasebtn" href="@Url.Action("Purchase", "Payment", new { packageId = Model.PackageId, bankName = "zarinpal", isFromWeb = true })"><span>@Global.PaymentPage26 </span></a>
                    }
                    else
                    {
                        <a class="btn btn-default purchasebtn" href="@Url.Action("WMPurchase", "Payment",new { packageId = Model.PackageId, isFromApp = false })"><i class="icon fa fa-check-square-o"></i>@Global.btnPurchase  </a>
                    }

                </div>
            </div>




        </div>







    </div>
