                    <span id="PriceLabel">@string.Format("{0:#,##0.##}", Model.PackagePriceDollar) $</span>
                }
                <div id="PurchacebtnBlock" class="col-xs-12">

                    <a class="btn btn-sm btn-default" href="mobile/close" style="width:100px; font-size:small;"><i class="icon fa fa-close"></i>&nbsp; @Global.btnCancel</a>
