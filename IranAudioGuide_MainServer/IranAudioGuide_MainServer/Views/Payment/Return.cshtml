@using IranAudioGuide_MainServer.App_GlobalResources
@{
    ViewBag.Title = "Return";
    Layout = "~/Views/Shared/_PaymentLayout.cshtml";
}
<style>
    .jumbotron {
        text-align: center;
        /*display: inline-block;
        display: -webkit-inline-box;*/
    }

    .content-jumbotron {
        text-align: center;
        max-width: 483px;
        margin: 0 auto;
        /*border: 1px solid red;*/
    }

    .failePayment {
        background-color: #fddd02;
        padding: 2px 0px 0 0;
    }

    .successPayment {
        background-color: #8fc140;
    }

    .fa-box {
        color: rgb(255, 255, 255);
        text-shadow: 0px 0px 1px #000;
        font-size: 45px;
        text-align: center;
        border-radius: 50%;
        margin: 0 auto;
        width: 75px;
        height: 75px;
    }

    p.title {
        font-weight: 700;
        font-size: 23px;
    }

    .box-info {
        line-height: 15px;
        padding-top: 16px;
        color: #000;
    }

    p.packInfo {
        font-weight: 500;
    }
</style>
<div class="container-fluid">
    <!-- Image and text -->
    <nav class="navbar navbar-ligth pt-0">
        <div class="navbar-brand pt-0">
            <img src="~/images/IAGSITELOGO.png" class="d-inline-block navImg" alt="@Global.IranAudioGuide" />
            <span class="align-middle navHeader">@Global.IranAudioGuide</span>
        </div>
    </nav>

    <div class="jumbotron my-3 ">

        <div class="content-jumbotron">
            @if (ViewBag.Succeeded == true)
            {
                <div class="fa-box successPayment">
                    <i class="fa fa-thumbs-o-up"></i>
                </div>
            }
            else
            {
                <div class="fa-box successPayment">
                    <i class="fa fa-thumbs-o-down"></i>
                </div>
            }
            <p class="title"> @ViewBag.Message</p>
            <p>@ViewBag.ErrDesc</p>
            <div class="box-info">
                <p class="packInfo">@Global.ReturnPaymentReferenceID</p>
                <p><i class="fa fa-key"></i> @ViewBag.SaleReferenceId <p>
                    @if (ViewBag.Succeeded == true)
                    {
                    <p class="packInfo">@Global.PaymentPage27</p>
                    <p><i class="fa fa-briefcase"></i> @ViewBag.Packname  </p>
                    <p class="packInfo">@Global.Price</p>
                    <p><i class="fa fa-briefcase"></i> @ViewBag.Price  </p>
                    }
                </div>
                <div>
                    @if (ViewBag.Succeeded)
                    {
                        <a class="btn btn-primary btn-block float-right" href="mobile/purchased" style="width:100px; font-size:small;">@Global.btnContinue</a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-default purchasebtn" href="mobile/close" style="width:100px; font-size:small;">@Global.btnContinue</a>
                    }
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
