<section id="CheckOutSection">
    <div id="infocontainer" class="col col-sm-12 col-xs-12">
        <div class="col-xs-12 checkout-content chkout-img">
            <h3 id="UserIdentity"><br><i class="icon fa-user-circle-o"></i>&nbsp;@User.Identity.Name</h3>
        </div>

        <div class="col-md-8 col-sm-8 col-md-push-2 col-sm-push-2 col-xs-10 col-xs-push-1 checkout-content chkout-text">

            <table id="ChkTable" class="table-mybordered table-condensed">

                <tr id="PkgNameRow">
                    <td id="PkgName" class="_2ndtd"><i class="icon fa-briefcase"></i>&nbsp;@Model.PackageName</td>
                </tr>

            </table>
            <table id="PkgDetailsTbl" class="table-mybordered tbldotted table-condensed">
                <tr>
                    <td class="_1sttd PkgDetTD"><i class="icon fa-map-signs"></i>&nbsp;Places</td>
                    <td class="_2ndtd PkgDetTD"><i class="icon fa-clipboard"></i>&nbsp;Description</td>
                </tr>




                @foreach (var item in Model.PackageCities)
                {

                    <tr style="background-color: #19304c !important;">
                        <td class="_1sttd" style="background-color:transparent;"><div class="col-xs-12" style="color:white; font-size:small; font-weight:300;">@item.CityName</div></td>
                        <td class="_2ndtd desc" style="background-color:transparent; color:white; padding-top: 10px !important; font-weight:300;">@item.CityDesc</td>
                    </tr>
                }


                <tr style="background-color: #19304c !important;">
                    <td class="_1sttd" colspan="2" style="background-color:#001644 !important;">
                        <div class="col-xs-12" style="color:white; font-size:small; font-weight:600; font-style:italic; padding:5px;">
                            <i class="icon fa-credit-card-alt"></i>
                            &nbsp;Payment Gateway
                        </div>
                    </td>

                </tr>
                <tr>
                    <td class="_2ndtd" style="color:white; font-size:small; font-weight:300; vertical-align:middle;">
                        @if (ViewBag.IsChooesZarinpal)
                        {
                            <img style="width:35%;" src="~/images/icon-128x128.png" />

                        }
                        else
                        {
                            <img style="width:90%;" src="~/images/wmlogo_vector_blue.png" />
                        }
                    </td>
                    <td class="_2ndtd" style="color:white; font-size:small; font-weight:300; vertical-align:middle;">
                        <div class="col-xs-12" style="text-align:center; padding:0;">
                            @if (ViewBag.IsChooesZarinpal)
            {
                                <script src="https://www.zarinpal.com/webservice/TrustCode" type="text/javascript"></script>
                                <p style="color:black; text-shadow:none; font-size:10px;">You can check your payment trustfulness by click on ZarinPal Logo above</p>

                            }
                            else
                            {
                                <ul class="icons" style="margin:0;">
                                    <li>
                                        <a href="#" style="margin:5px 0px; border-bottom: 0.8px solid white; background-color:transparent; color:whitesmoke; font-size:10px;" type="button" class="btn btn-sm btn-default" data-toggle="modal" data-target="#howto">How to pay</a>
                                    </li>
                                    <li>
                                        <a href="#" style="margin:5px 0px; border-bottom: 0.8px solid white; background-color:transparent; color:whitesmoke; font-size:10px;" type="button" class="btn btn-sm btn-default" data-toggle="modal" data-target="#procedure">Payment procedure</a>
                                    </li>
                                </ul>
                                <div id="awi"><a href="#"><i id="wminfobtn" class="icon fa-info-circle"></i>&nbsp;About WebMoney</a></div>

                                                <!-- begin WebMoney Transfer : attestation label -->
                                <a id="wmcheck" href="https://passport.webmoney.ru/asp/certview.asp?wmid=059551878952" target=_blank>
                                    <IMG SRC="~/images/v_blue_on_transp_en.png" title="Here is your WM passport 059551878952" border="0">@*<br>
                                        <font size=1>Check Passport</font>*@
                                </a>
                <!-- end WebMoney Transfer : attestation label -->

                            }

                        </div>
                    </td>
                </tr>
                @*<tr>
                        <td colspan="2" class="_1sttd" style="background-color:#001644 !important;"><div class="col-xs-12" style="color:white; font-size:small; font-weight:600; font-style:italic;"><i class="icon fa-money"></i>&nbsp;Price</div></td>

                    </tr>
                    <tr>
                        @if (ViewBag.IsChooesZarinpal)
                        {

                            <td colspan="2" class="_2ndtd" style="vertical-align:middle; height:65px;">
                                <span style="color:white; font-size:large; font-weight:600; padding:10px; border-radius:8px; background:#F44336;">@string.Format("{0:#,##0.##}", Model.PackagePrice * 10) IRR</span>
                            </td>

                        }
                        else
                        {

                            <td colspan="2" class="_2ndtd" style="vertical-align:middle;  height:65px;">
                                <span id="PriceLabel">@string.Format("{0:#,##0.##}", Model.PackagePriceDollar) $</span>
                            </td>
                        }
                    </tr>*@
            </table>

            <div class="col-xs-12" style="padding:0px; color:white; font-size:small; font-weight:600; font-style:italic; text-align:center; top:5px;">
                <i class="icon fa-money"></i>&nbsp;Price :
                @if (ViewBag.IsChooesZarinpal)
                {
                        <span style="color:white; font-size:large; font-weight:600; padding:10px; border-radius:8px; background:#F44336;">@string.Format("{0:#,##0.##}", Model.PackagePrice * 10) IRR</span>
                }
                else
                {
                        <span id="PriceLabel">@string.Format("{0:#,##0.##}", Model.PackagePriceDollar) $</span>
                }
                <div id="PurchacebtnBlock" class="col-xs-12">

                    <a class="btn btn-sm btn-default" href="mobile/close" style="width:100px; font-size:small;"><i class="icon fa-close"></i>&nbsp; Cancel</a>
                    @if (ViewBag.IsChooesZarinpal)
                    {
                        @Html.ActionLink(" Purchase", "Purchase", new { packageId = Model.PackageId, bankName = "zarinpal", isFromWeb = false }, new { @class = "btn btn-default icon fa-check-square-o purchasebtn" })
                    }
                    else
                    {
                        @Html.ActionLink(" Purchase", "WMPurchase", new { packageId = Model.PackageId, isFromApp = true }, new { @class = "btn btn-default icon fa-check-square-o purchasebtn" })
                    }

                </div>
            </div>



           
        </div>







    </div>
</section>