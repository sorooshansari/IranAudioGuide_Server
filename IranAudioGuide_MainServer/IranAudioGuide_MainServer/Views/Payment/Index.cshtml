@model IranAudioGuide_MainServer.Models.PackagePymentVM
@using IranAudioGuide_MainServer.App_GlobalResources
@{
    Layout = "~/Views/Shared/_PaymentLayout.cshtml";
}
<div class="container-fluid">
    <!-- Image and text -->
    <nav class="navbar navbar-ligth pt-0">
        <div class="navbar-brand pt-0">
            <img src="~/images/IAGSITELOGO.png"  class="d-inline-block navImg" alt="@Global.IranAudioGuide">
            @*<img src="@Global.ImagePath/IAGSmallWhiteLogo.png"/>*@
            <span class="align-middle navHeader">@Global.IranAudioGuide</span>
        </div>
    </nav>

    <div class="jumbotron my-3">
        <h3 class="display-10"><i class="fa fa-briefcase"></i> @Model.PackageName</h3>
        <!--<p class="lead">Cities Included</p>-->
        <div class="mt-4 ml-4">
            @foreach (var item in Model.PackageCities)
            {
                <div class="mt-2">
                    <h5 class="d-inline-block">
                        <i class="fa fa-map"></i> @item.CityName
                    </h5>
                    <br class="hidden-sm-up" />
                    <h6 class="d-inline-block pl-3">
                        <span class="fa fa-map-marker badge badge-default"> @item.PlaceCount </span>
                    </h6>
                    <h6 class="d-inline-block">
                        <span class="fa fa-microphone badge badge-default"> @item.TrackCount</span>
                    </h6>
                    <p>
                        @item.CityDesc
                    </p>
                </div>
            }

        </div>

        <hr class="my-4">
        <h4><i class="fa fa-credit-card-alt"></i> @Global.PaymentPage30</h4>

        <div class="my-4 mx-2">
            <div class="row py-2">
                <h5 class="d-inline-block col-12 col-sm-3">@Global.PaymentPage22</h5>
                <div class="offset-2 col-8 col-sm-6">
                    <img src="~/images/WebMoney-logo-white_8.png" class="rounded w-100" style="background-color:#006dae"/>
                    @*<img src="http://iranaudioguide.net/Images/WebMoney-logo-white_8.png">*@
                </div>
            </div>
            <div class="row py-2">
                <h5 class="d-inline-block col-12 col-sm-3">@Global.PaymentPage25</h5>
                <div class="offset-2 col-8 col-sm-6">
                    @if (ViewBag.IsChooesZarinpal)
                    {
                        <div class="bg-primary rounded priceValue text-center">
                            <h5> @string.Format("{0:#,##0.##}0", Model.PackagePrice) IRR</h5>
                        </div>
                    }
                    else
                    {
                        <div class="bg-primary rounded priceValue text-center">
                            <h5>@string.Format("{0:#,##0.##}", Model.PackagePriceDollar)<i class="fa fa-usd"></i></h5>
                        </div>
                    }
                </div>
            </div>
        </div>
        <p>@Global.PaymentPage31</p>
        <p class="lead">
            <a class="btn btn-primary btn-responsive float-right"
               href="/en/Payment/WMPurchase?packageId=18619136-9afd-e611-80bf-20cf30561859&amp;isFromApp=true" role="button">
                <i class="fa fa-check-square-o"></i> @Global.btnPurchase
            </a>
            <a class="btn btn-default btn-responsive float-right"
               href="mobile/close" role="button">
                @Global.btnCancel
            </a>
        </p>
        <div class="clearfix"></div>
    </div>
</div>