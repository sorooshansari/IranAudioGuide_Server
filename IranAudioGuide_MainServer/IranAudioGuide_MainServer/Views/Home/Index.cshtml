@{
    ViewBag.Title = "Iran Audio Guide";
}
<style>
    .form-request {
        width: 416px;
        margin: auto;
        max-height: 0px;
        overflow: hidden;
        -moz-transition: all 1s ease-in-out;
        -webkit-transition: all 1s ease-in-out;
        -o-transition: all 1s ease-in-out;
        transition: all 1s ease-in-out;
    }

    .form-request-show {
        max-height: 400px;
    }

    .form-request a {
        font-size: 18px;
        padding: 0;
        width: 75px;
        background-color: #00a293;
        color: #fff !important;
    }

        .form-request a:hover {
            background-color: #707292;
            color: #00a293 !important;
        }

    .form-request .message {
        color: #fff;
        text-align: left;
        font-size: 81%;
        margin: 0 0 0 4%;
        width: 95%;
        /*border: 1px solid red;*/
        display: inline-block;
    }

    /*.form-group {
        margin-bottom: 0;
    }*/

    .form-request .error input {
        border: 1px solid #de0000;
        color:#de0000;
    }

    .form-request .error a {
        box-shadow: inset 0 0 0 2px #de0000;
        /*color: #f7f7f7;*/
        background-color: #de0000;
    }
    .error-msg {
    color: #de0000;
    text-shadow: 0px 0px 9px #060713;
}
</style>
<section id="banner">
    <div class="inner">
        <div id="logo">
            <img src="~/images/IAGSITELOGO.png" />
        </div>
