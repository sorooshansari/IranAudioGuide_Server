<!-- Footer -->
<footer id="footer">
    <div id="contact" class="form-container">
        <form name="contactForm" class="form-horizontal" ng-submit="ContactUs(ContactFormModel, contactForm)">
            <fieldset>
                <legend style="color:#ffffff;">Feel free to Contact us...</legend>
                <br />
                <div class="form-group">
                    <div class="col-xs-12">
                        <div class="input-group">
                            <span ng-class="ValidationClass(0)" class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input ng-blur="validator($event, 0)" ng-model="ContactFormModel.name" id="name" name="name" class="form-control" placeholder="Name" type="text" required="">
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <div class="input-group">
                            <span ng-class="ValidationClass(1)" class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            <input ng-blur="validator($event, 1)" ng-model="ContactFormModel.email" id="Email4" name="Email" class="form-control" placeholder="Email" type="email" required="">
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-pencil-square-o"></i></span>
                            <input ng-model="ContactFormModel.subject" id="Subject" name="Subject" class="form-control" placeholder="Subject" type="text">
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <div class="input-group">
                            <span ng-class="ValidationClass(3)" class="input-group-addon"><i class="fa fa-commenting"></i></span>
                            <textarea ng-blur="validator($event, 3)" ng-model="ContactFormModel.message" id="Message" name="Message" class="form-control" placeholder="Your Message..." required=""></textarea>
                        </div>

                    </div>
                </div>

                <!-- Button -->
                <div class="form-group">
                    <div class="col-xs-12">
                        <button id="SubmitBtn" name="SubmitBtn" class="btn btn-inverse"><i class="fa fa-send"></i>   Send</button>
                    </div>
                </div>

            </fieldset>
        </form>
        <!--<Contact overlay> -->
        <div ng-show="overlay" class="contactoverlay">
            <img ng-show="!sent" src="~/Content/images/bars.svg" />
            <p ng-show="sent" ng-bind="sentMessage"></p>
