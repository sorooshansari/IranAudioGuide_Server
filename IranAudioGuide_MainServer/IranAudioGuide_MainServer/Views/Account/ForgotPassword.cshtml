
@using IranAudioGuide_MainServer.App_GlobalResources;
@model IranAudioGuide_MainServer.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = Global.TitlePageForgot;
}



<section id="promo" class="content-block min-height-600px">
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                @*  Please don't remove item  *@
                <span id="chechLogin"></span>
                <h2>@Global.TitlePageForgot</h2>
                <p id="regdet">
                    @Global.forgotEnterEmail
                </p>
                @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("ReturnUrl", (string)ViewBag.ReturnUrl)
                    @*@Html.ValidationSummary("", new { @class = "text-danger" })*@
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", placeholder = Global.PlaceholderEmail })
                    <div class="form-group">
                        <div class="col-md-8">
                            <div class="input-group">
                                <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = Global.PlaceholderEmail })
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-8">
                            <button id="signbtn" type="submit" name="signbtn" class="btn btn-inverse"><i class="fa fa-sign-in"></i>&nbsp;@Global.Parameter40</button>
                        </div>
                    </div>
                }

            </div>
        </div>
        <!-- /.row -->
    </div>
</section>






