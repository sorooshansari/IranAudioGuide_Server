    #CheckOutSection #page-wrapper {
        min-height: 100vh;
    }

    #CheckOutSection .chkout-img {
        text-align: center;
    }

        #CheckOutSection .chkout-img img {
            width: 150px;
            margin-bottom: 20px;
        }

    #CheckOutSection .chkout-text {
        padding: 1em 0em 2em 0em;
        margin: 0 auto;
        background-color: rgba(144,144,144,.25);
        border-radius: 5px;
        min-height: 45vh;
    }

        #CheckOutSection .chkout-text h1, #CheckOutSection .chkout-text p {
            color: white !important;
            text-shadow: 1px 1px 2px #000000 !important;
            line-height: 25px;
            padding-left: 70px;
        }

            #CheckOutSection .chkout-text p a {
                color: #00a293 !important;
                text-shadow: none;
                text-decoration: none;
                font-weight: 800;
                text-shadow: 1px 1px 2px #000000;
            }

            #CheckOutSection .chkout-text h1 i, #CheckOutSection .chkout-text p i {
                color: #00a293;
                position: absolute;
                left: 20px;
                margin-top: 5px;
                text-shadow: none !important;
                font-size: large;
            }

    #CheckOutSection ._1sttd {
        font-size: 14px;
        width: 50%;
        border-right: 1px solid #15437f !important;
        vertical-align: middle;
        font-weight: 600;
    }

        #CheckOutSection ._1sttd i {
            position: absolute;
            left: 5px;
            top: 5px;
            font-size: large;
        }

        #CheckOutSection ._1sttd .col-xs-12 {
            padding-left: 25px;
        }

    #CheckOutSection ._2ndtd {
        width: 50%;
    }

    #CheckOutSection .table-mybordered > thead > tr > th, #CheckOutSection .table-mybordered > tbody > tr > th,
    #CheckOutSection .table-mybordered > tfoot > tr > th,
    #CheckOutSection .table-mybordered > thead > tr > td,
    #CheckOutSection .table-mybordered > tbody > tr > td, .table-mybordered > tfoot > tr > td {
        border: 1px solid #b6b6b6;
        /*border-left: none !important;
        border-right: none !important;*/
    }

    #CheckOutSection table tbody tr {
        background: none !important;
    }

    #CheckOutSection .desc {
        font-weight: 600;
        font-size: x-small;
        padding: 0 10px !important;
    }

    #CheckOutSection .purchasebtn {
        width: 120px;
        background-color: #15437f;
        color: white;
        font-size: small;
    }
</style>

<section id="CheckOutSection">
    <div id="infocontainer" class="col col-sm-push-1 col-sm-pull-1 col-sm-10 col-xs-12">
        <div class="col-xs-12 checkout-content chkout-img">

        <img src="@Global.ImagePath/IAGSITELOGO.png" />
        </div>

        <div class="col-md-10 col-sm-10 col-md-push-1 col-sm-push-1 col-xs-12 checkout-content chkout-text">
            <h1>
                <i class="fa fa-bullseye"></i>
                @Model.Subject
            </h1>
            <p style="border-top: 5px solid #00a293; font-size:small;">
                <br />
                <i class="fa fa-commenting"></i>
                @Html.Raw(Model.Message)
            </p>
        </div>
    </div>
</section>
