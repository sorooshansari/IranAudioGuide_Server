}


<style type="text/css">
    #page-wrapper {
        height: 100vh;
        background: none !important;
    }

    .spotlightv {
        margin-top: 25vh;
    }

    #header.alt h1 {
        /*-ms-pointer-events: none;*/
        /* pointer-events: none; */
        opacity: 1 !important;
    }

    #header.alt {
        background: #15437f !important;
            border-bottom:thin solid white;
         }
    body {
    background: #15437f;
        }

    #MainSection
    {
          /* position: absolute; */
          margin-top: 100px;
          height: 400px;
          width: 100%;
    }

    .Main-content
    {
          float:right;
    }

    .Main-text
    {
          padding: 3em;
          padding-top: 175px;
    }
    #infocontainer
    {
            background-color: #f1f1f1;
    border-bottom-left-radius: 30px;
    border-bottom-right-radius: 30px;
    box-shadow: 0px 0px 10px black;
    min-height: 85vh;
    margin-top: 45px;
    margin-bottom: 30px;
    }


    .chkout-img
    {
        text-align:center;
    }

    .chkout-img img
    {
        width:150px;
            margin-bottom: 20px;
         }
    .chkout-text
    {
            padding: 1em 0em 2em 0em;
            margin:0 auto;
    }
    .chkout-text h1, .chkout-text p
    {
            color: #15437f !important;
                text-shadow: 1px 1px 2px #808080 !important; 
                line-height:25px;
    }
    #pkgrow
    {
        background-color:white !important;
    }
    #pkgrow > td
    {
        font-size:small !important;
        color:#303030 !important;
    }
    #pkgrow .closetd a
    {
            border-bottom: none;
    }
    #pkgrow .closetd i.fa-close
    {
position: relative;
    left: 0px;
    margin-top: 0px;
    font-size: 20px;
    color: #c30f02;
    width: 30px;
    height: 30px;
    padding: 5px 5px 5px 5px;
    border-radius: 10px;
    background-color: #ffffff;
    -moz-transition: all 0.3s ease;
    -webkit-transition: all 0.3s ease;
    -ms-transition: all 0.3s ease;
    transition: all 0.3s ease;

    }

        #pkgrow .closetd i.fa-close:hover
    {
    background-color: #c30f02;
    color:#ffffff;
        -moz-transition: all 0.3s ease;
    -webkit-transition: all 0.3s ease;
    -ms-transition: all 0.3s ease;
    transition: all 0.3s ease;
    }
    ._1sttd
    {
        width:65%;
            border-right: 1px solid #b6b6b6 !important;
            vertical-align:middle;
    }
    ._2ndtd
    {
        width:35%;
    }
    .table-mybordered>thead>tr>th, .table-mybordered>tbody>tr>th, .table-mybordered>tfoot>tr>th, .table-mybordered>thead>tr>td, .table-mybordered>tbody>tr>td, .table-mybordered>tfoot>tr>td 
    {
        border: 1px solid #b6b6b6;
        border-left:none !important;
            border-right:none !important;
    }

    table tbody tr
    {
        background:none !important;
    }
</style>

