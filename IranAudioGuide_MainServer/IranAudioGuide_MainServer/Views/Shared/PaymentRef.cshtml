<section id="PaymentRefSection" onload="time_dec()">
    <div id="infocontainer" class="col col-sm-push-1 col-sm-pull-1 col-sm-10 col-xs-12">
        <div class="col-xs-12 checkout-content chkout-img">
            <img src="~/images/IAGSITELOGO.png" />
            <h1>@Html.Raw(ViewBag.Image) @ViewBag.Message</h1>
        </div>

        <div class="col-md-10 col-sm-10 col-md-push-1 col-sm-push-1 col-xs-12 checkout-content chkout-text">


            <div class="col-xs-12" style="text-align:left;">
                <p>
                    Your payment was successful! <br /> Now you can use your purchased package inside Iran Audio Guide Application.
                    <br /> You will be redirected to your account profile after <input id="url" type="hidden" value="http://localhost:8462/User/" /><span id="countdown2"><span id="countdown" style="color:red;">10</span> seconds</span>.
                </p>
            </div>

            <div class="col-md-10 col-sm-10 col-md-push-1 col-sm-push-1 col-xs-12 checkout-content chkout-text">


                <table class="table-mybordered tbldotted table-condensed" style="width: 100%; border-radius: 10px 10px 0px 0px; margin: 0px 0px 10px; color: rgb(20, 68, 130); text-shadow: none; text-align: center; background-color: transparent;">
                    <tbody>
                        <tr>
                            <td class="_1sttd" style="background-color: transparent;"><div class="col-xs-12"><i class="fa fa-map-marker"></i>Persepolis</div></td>
                            <td class="_2ndtd desc" style="background-color: transparent;">The UNESCO World heritage site, 60km north of Shiraz. A 2500 year old ancient royal complex.</td>
                        </tr>
                        <tr>
                            <td class="_1sttd" style="background-color: transparent;"><div class="col-xs-12"><i class="fa fa-map-marker"></i>Naghshe Rostam</div></td>
                            <td class="_2ndtd desc" style="background-color:transparent;"></td>
                        </tr>
                        <tr style="border-top:15px solid #144482;">
                            <td class="_1sttd" style="background-color: white;"><div class="col-xs-12"><i class="fa fa-money"></i> Price</div></td>
                            <td class="_2ndtd" style="background-color:white;">10,000 IRR</td>
                        </tr>
                        <tr style="background-color:white;">
                            <td class="_1sttd" style="background-color: white;"><div class="col-xs-12"><i class="fa fa-credit-card-alt"></i>Payment Gateway</div></td>
                            <td class="_2ndtd" style="background-color:white;     font-size: small; font-weight: 600;">
                                <img style="width:55px; vertical-align: middle;" src="/images/icon-128x128.png"><br>
                                ZarrinPal
                            </td>
                        </tr>
                    </tbody>
                </table>


            </div>








            <div class="col-xs-12 checkout-content chkout-img">
                <h1><i class="fa fa-close" style="color:red; font-size:45px;"></i>Unsuccessful Payment!</h1>
            </div>

            <div class="col-md-10 col-sm-10 col-md-push-1 col-sm-push-1 col-xs-12 checkout-content chkout-text">


                <div class="col-xs-12" style="text-align:left;">
                    <p>
                        Your payment was unsuccessful! <br />
                        <br /> You will be redirected to your account profile after <input id="url" type="hidden" value="http://localhost:8462/User/" /><span id="countdown2"><span id="countdown" style="color:red;">10</span> seconds</span>.
                    </p>
                </div>
                <div class="col-xs-12 checkout-content chkout-img">
                    <br />
                    <h1>Payment Details</h1>
                </div>
                <table id="ChkTable" class="table-mybordered table-condensed" style="width: 100%;  border-radius:10px;  margin-bottom: 0px !important;border-top:none !important;  color: #144482; text-shadow:none; text-align:center;">
                    <tr style="background-color: #144482 !important; color: white; border-top-left-radius:10px; border-top-right-radius:10px; border-top:none !important; ">
                        <td class="_1sttd" style="border-top-left-radius:10px; border-top:none !important;  ">Package</td>
                        <td class="_2ndtd" style="border-top-right-radius:10px; border-top:none !important; ">Price (Toman)</td>
                    </tr>
                    <tr id="pkgrow">
                        <td class="_1sttd"><i class="fa fa-circle"></i> Shiraz - Perspolis</td>
                        <td class="_2ndtd">5.00</td>
                    </tr>
                </table>
                <hr style="border-bottom: solid 10px #144482; margin: 0px !important;" />
                <table class="table-mybordered tbldotted table-condensed" style="width: 100%; margin-bottom: 10px;  color: #144482; text-shadow:none; text-align:center;     background-color: white;">
                    <tr>
