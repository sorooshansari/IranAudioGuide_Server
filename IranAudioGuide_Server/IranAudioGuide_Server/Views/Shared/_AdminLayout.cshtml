@using IranAudioGuide_Server.Models
@model AdminIndexVM

@{
    string hrefPrefix = (ViewBag.View == null || (Views)ViewBag.View != Views.AdminIndex) ? Url.Action("Index", "Admin") : "";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <!--[if lte IE 8]><script src="~/Scripts/ie/html5shiv.js"></script><![endif]-->
    <link href="~/Content/AdiminMain.css" rel="stylesheet" />
    <!--[if lte IE 8]><link rel="stylesheet" href="~/Content/ie8.css" /><![endif]-->
    <!--[if lte IE 9]><link rel="stylesheet" href="~/Content/ie9.css" /><![endif]-->
    <link href="~/Content/AdminCustom.css" rel="stylesheet" />
</head>
<body>
    <!-- Header -->
    <div id="header">

        <div class="top">

            <!-- Logo -->
            <div id="logo">
                <span class="image avatar48"><img src="@Model.AdminInfo.imgUrl" alt="@Model.AdminInfo.FullName" /></span>
                <h1 id="title">@Model.AdminInfo.FullName</h1>
                <p>@Model.AdminInfo.Email</p>
            </div>

            <!-- Nav -->
            <nav id="nav">
                <ul>
                    <li>
                        <a href="@(hrefPrefix)#top" id="top-link" class="skel-layers-ignoreHref">
                            <span class="icon fa-home">Top</span>
                        </a>
                    </li>
                    <li>
                        <a href="@(hrefPrefix)#PlaceList" id="PlaceList-link" class="skel-layers-ignoreHref">
                            <span class="icon fa-list-ul">Places</span>
                        </a>
                    </li>
                    <li>
                        <a href="@(hrefPrefix)#NewPlace" id="NewPlace-link" class="skel-layers-ignoreHref">
                            <span class="icon fa-plus-square">New place</span>
                        </a>
                    </li>
                </ul>
            </nav>

        </div>

        <div class="bottom">

            <!-- Social Icons -->
            <ul class="icons">
                <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
                <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
                <li><a href="#" class="icon fa-github"><span class="label">Github</span></a></li>
                <li><a href="#" class="icon fa-dribbble"><span class="label">Dribbble</span></a></li>
                <li><a href="#" class="icon fa-envelope"><span class="label">Email</span></a></li>
            </ul>

        </div>

    </div>
    <div>
        @RenderBody()
    </div>
    <!-- Footer -->
    <div id="footer">

        <!-- Copyright -->

        <ul class="copyright">
            <li>&copy; @DateTime.Now.Year - Soroosh Developer Team</li>
            <li>Developer: <a href="#">Soroosh Ansari Mehr</a></li>
        </ul>

    </div>

    <!-- Scripts -->
    <script src="~/Scripts/jquery-2.2.3.min.js"></script>
    <script src="~/Scripts/jquery.scrolly.min.js"></script>
    <script src="~/Scripts/jquery.scrollzer.min.js"></script>
    <script src="~/Scripts/skel.min.js"></script>
    <script src="~/Scripts/util.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <!--[if lte IE 8]><script src="~/Scripts/ie/respond.min.js"></script><![endif]-->
    <script src="~/Scripts/AdminMain.js"></script>
    <script src="~/Scripts/AdminCustom.js"></script>
</body>
</html>
